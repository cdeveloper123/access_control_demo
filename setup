#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

# ==============================================================================
# Access Control Demo - Project Setup Script
# ==============================================================================
# This script sets up the development environment for the Rails application
# 
# Version: 2.0.0
# Last Updated: 2025-01-15
# 
# Usage: ./setup
# 
# What this script does:
# - Validates environment prerequisites
# - Installs Ruby dependencies
# - Sets up SQLite databases (no external database required!)
# - Runs database migrations
# - Seeds demo data
# - Builds Tailwind CSS assets
# - Performs health checks
# - Provides helpful next steps
# ==============================================================================

echo "ğŸš€ Setting up Access Control Demo..."

# ==============================================================================
# VALIDATION SECTION
# ==============================================================================

# Check if we're in the right directory
if [ ! -f "Gemfile" ]; then
  echo "âŒ Error: This script must be run from the Rails project root directory"
  echo "   Current directory: $(pwd)"
  echo "   Expected files: Gemfile, app/, config/, etc."
  exit 1
fi

# Check Ruby version (optional - will show warning if not available)
if command -v ruby >/dev/null 2>&1; then
  RUBY_VERSION=$(ruby --version)
  echo "ğŸ“ Current Ruby version: $RUBY_VERSION"
  
  # Check if Ruby version is at least 3.2.0
  if ruby -e "exit(RUBY_VERSION < '3.2.0')" 2>/dev/null; then
    echo "âœ… Ruby version is compatible"
  else
    echo "âš ï¸  Warning: Ruby 3.2.0+ recommended. Current: $RUBY_VERSION"
  fi
else
  echo "âŒ Ruby not found in PATH!"
  echo "ğŸ“‹ Please install Ruby 3.2.3 or higher:"
  echo "   macOS: brew install ruby"
  echo "   Linux: Use rbenv or rvm"
  echo "   Windows: Use RubyInstaller"
  exit 1
fi

# ==============================================================================
# DEPENDENCY INSTALLATION
# ==============================================================================

echo "ğŸ“¦ Installing Ruby dependencies..."
bundle check || bundle install

# ==============================================================================
# DATABASE SETUP
# ==============================================================================

echo "ğŸ”§ Setting up SQLite database..."

# Create storage directory for SQLite databases
mkdir -p storage

# Create databases if they don't exist
if ! rails runner "ActiveRecord::Base.connection" >/dev/null 2>&1; then
  echo "Creating SQLite databases..."
  rails db:create
else
  echo "Database connection verified âœ…"
fi

# Run pending migrations
echo "Running database migrations..."
rails db:migrate

# Run migrations for test environment
echo "Setting up test database..."
RAILS_ENV=test rails db:migrate

# Seed the database with demo users and test data
echo "Seeding database with demo users..."
rails db:seed

# ==============================================================================
# ASSET COMPILATION
# ==============================================================================

echo "ğŸ¨ Building Tailwind CSS..."
rails tailwindcss:build

# ==============================================================================
# CLEANUP
# ==============================================================================

echo "ğŸ§¹ Cleaning up..."
# Remove any temporary files
rm -f tmp/pids/server.pid

# ==============================================================================
# HEALTH CHECKS
# ==============================================================================

echo "ğŸ” Checking project health..."

# Basic health checks
echo "âœ… Ruby version: $(ruby --version)"
echo "âœ… Rails version: $(rails --version)"
echo "âœ… Bundler version: $(bundle --version)"

# Check SQLite database
if [ -f "storage/development.sqlite3" ]; then
  echo "âœ… SQLite database created successfully"
  
  # Check database size for verification
  DB_SIZE=$(du -h storage/development.sqlite3 | cut -f1)
  echo "   Database size: $DB_SIZE"
else
  echo "âš ï¸  Warning: SQLite database not found"
  echo "   Expected: storage/development.sqlite3"
fi

# Check if all migrations are up to date
if rails db:migrate:status | grep -q "down"; then
  echo "âš ï¸  Warning: Some migrations are pending"
  echo "   Run: rails db:migrate"
else
  echo "âœ… All migrations are up to date"
fi

# Check if Tailwind CSS was built successfully
if [ -f "app/assets/builds/tailwind.css" ]; then
  echo "âœ… Tailwind CSS compiled successfully"
  
  # Check CSS file size for verification
  CSS_SIZE=$(du -h app/assets/builds/tailwind.css | cut -f1)
  echo "   CSS file size: $CSS_SIZE"
else
  echo "âš ï¸  Warning: Tailwind CSS may not have compiled"
  echo "   Run: rails tailwindcss:build"
fi

# Verify demo users were created
USER_COUNT=$(rails runner "puts User.count" 2>/dev/null || echo "0")
echo "âœ… Demo users created: $USER_COUNT users"

# ==============================================================================
# SUCCESS MESSAGE & NEXT STEPS
# ==============================================================================

echo ""
echo "ğŸ‰ Setup complete! Your Access Control Demo is ready."
echo ""
echo "ğŸ“‹ Next Steps:"
echo ""
echo "1. Start the development server:"
echo "   bin/dev                    # Recommended (Rails + Tailwind watcher)"
echo "   rails server              # Rails only (Tailwind won't auto-compile)"
echo ""
echo "2. Access the application:"
echo "   http://localhost:3000"
echo ""
echo "ğŸ¯ Demo Features:"
echo "   âœ… Organization-based access control with role permissions"
echo "   âœ… Age-based participation system with COPPA compliance"
echo "   âœ… Admin panel with analytics and member management"
echo "   âœ… Parental consent requirements for users under 13"
echo "   âœ… Email testing without SMTP (LetterOpener Web)"
echo "   âœ… Beautiful responsive UI with Tailwind CSS"
echo "   âœ… Pre-seeded demo users for immediate testing"
echo "   âœ… SQLite database (no external database required!)"
echo ""
echo "ğŸ‘¥ Demo Users Ready:"
echo "   admin@test.com       (password123) - Full admin access + analytics"
echo "   moderator1@test.com  (password123) - Can edit/delete activities"
echo "   member1@test.com     (password123) - Standard member access"
echo "   child@test.com       (password123) - Blocked by age (shows consent screen)"
echo ""
echo "ğŸ›   Development Commands:"
echo "   rails console             # Rails console"
echo "   rails db:seed             # Re-load demo users"
echo "   rails db:reset            # Reset and re-seed database"
echo "   rails tailwindcss:build   # Rebuild Tailwind CSS"
echo "   ./setup                   # Re-run this setup script"
echo ""
echo "ğŸ“š Documentation:"
echo "   README.md                 # Project overview and features"
echo "   DEMO_GUIDE.md             # 15-minute demo script for presentations"
echo ""
echo "ğŸ’¡ Why SQLite?"
echo "   âœ… Zero configuration required"
echo "   âœ… No external database installation needed"
echo "   âœ… Perfect for development and demos"
echo "   âœ… Production still uses PostgreSQL for scalability"
echo ""
echo "ğŸš€ Ready to demo! Run 'rails server' and visit http://localhost:3000"
echo ""
echo "Happy coding! ğŸ¯" 