<div class="min-h-screen bg-gray-100 py-6">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="bg-gradient-to-r from-green-500 to-blue-600 shadow-lg rounded-3xl p-8 mb-8 text-white">
      <h1 class="text-3xl font-bold mb-2">
        üè¢ Create New Organization
      </h1>
      <p class="text-xl opacity-90">
        Set up a new organization for member management
      </p>
    </div>

    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to admin_organizations_path, class: "inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg font-medium transition-colors duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
        </svg>
        Back to Organizations
      <% end %>
    </div>

    <!-- Form -->
    <div class="bg-white shadow-lg rounded-3xl p-8">
      <%= simple_form_for([:admin, @organization]) do |f| %>
        <%= f.error_notification %>

        <div class="space-y-6">
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      label_html: { class: "block text-sm font-semibold text-gray-700 mb-2" },
                      input_html: { 
                        class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-blue-100 focus:border-blue-500 transition-all duration-200",
                        placeholder: "Enter organization name"
                      } %>

          <%= f.input :description,
                      as: :text,
                      label_html: { class: "block text-sm font-semibold text-gray-700 mb-2" },
                      input_html: { 
                        class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-blue-100 focus:border-blue-500 transition-all duration-200",
                        placeholder: "Describe your organization",
                        rows: 4
                      } %>
        </div>

        <div class="mt-8">
          <%= f.button :submit, "Create Organization", 
              class: "w-full bg-gradient-to-r from-green-500 to-blue-600 hover:from-green-600 hover:to-blue-700 text-white font-bold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200" %>
        </div>
      <% end %>
    </div>

  </div>
</div> 